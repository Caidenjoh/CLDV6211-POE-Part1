@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h2>Contact Us</h2>
            <p>If you have any questions or need further information, please feel free to contact us.</p>

            <div class="my-4">
                <h4>Our Contact Information</h4>
                <p><strong>Phone:</strong> 101 575 3404</p>
                <p><strong>Email:</strong> <a href="mailto:KhumaloCraft@gmail.com">KhumaloCraft@gmail.com</a></p>
                <p><strong>Address:</strong> 123 Artisan Lane, Crafters City, CC 12345</p>
            </div>

            <div class="my-4">
                <h4>Send Us a Message</h4>
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control my-2" placeholder="Your Name" required>
                        <input type="email" class="form-control my-2" placeholder="Your Email" required>
                        <textarea class="form-control my-2" rows="3" placeholder="Your Message" required></textarea>
                        <button type="submit" class="btn btn-primary mt-2">Submit</button>
                    </div>
                </form>
            </div>

            <div class="my-4">
                <h4>Follow Us</h4>
                <p>Stay updated with our latest crafts and events:</p>
                <a href="#" class="btn btn-primary btn-sm m-1">Facebook</a>
                <a href="#" class="btn btn-primary btn-sm m-1">Instagram</a>
                <a href="#" class="btn btn-primary btn-sm m-1">Twitter</a>
            </div>
        </div>
    </div>
</div>
<style>
    body {
        background-color: #f3e9e0; /* Light Cappuccino Color */
    }
</style>